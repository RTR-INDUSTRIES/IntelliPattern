# Environment Variables for Production
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET_KEY=your_super_secret_key_here_min_32_chars
FLASK_ENV=production

# Database Configuration (PostgreSQL recommended)
# Get from Neon, Supabase, or Railway
# Replace with your actual Neon database connection string
DATABASE_URL=postgresql://neondb_owner:npg_password@ep-host-pooler.region.aws.neon.tech/neondb?sslmode=require

# Google Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Email Configuration (for password reset, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
